# Navigation
alias ll='ls -lah'
alias la='ls -la'
alias l='ls -CF'
alias cd..='cd ..'
alias ...='cd ../../../'
alias ....='cd ../../../../'

# Git shortcuts
alias gs='git status'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias gl='git log --oneline -10'
alias gb='git branch'
alias gd='git diff'
alias gch='git checkout'

# Development
alias py='python3'
alias pip='pip3'
alias node-version='node -v && npm -v'

# Docker
alias d='docker'
alias dc='docker-compose'
alias dps='docker ps'
alias dlogs='docker logs -f'

# Utilities
alias reload='source ~/.zshrc'
alias cls='clear'
alias timestamp='date +%s'
